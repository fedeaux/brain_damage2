- table_form_id = bd_id 'single-page-manager-table-form'
- <%= singular_table_name %> ||= @<%= singular_table_name %>

- @single_page_manager_options ||= Hash.new(false)
- @single_page_manager_options[:cancel_button] = true

.brain-damage-single-page-manager-index-form{id: table_form_id}
  - if @single_page_manager_options[:explicit_form]
    .brain-damage-hideable-content.brain-damage-add-form-wrapper
      = r '<%= plural_table_name %>/form', <%= singular_table_name %>: <%= singular_table_name %>

  - else
    .ui.basic.small.icon.button.brain-damage-show
      %i.add.icon

    .brain-damage-hideable-content.brain-damage-add-form-wrapper{ colspan: 99, style: 'display: none' }
      = r '<%= plural_table_name %>/form', <%= singular_table_name %>: <%= singular_table_name %>

    :javascript
      new BrainDamage.TrailingForm("##{table_form_id}")
